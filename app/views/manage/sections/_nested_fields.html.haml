.association-group.nested-fields
  .legend
    - if f.object.id.present?
      Section
    - else
      New Section

  .container
    .fieldset
      - if f.object && f.object.id
        .field
          .field-content
            .title
              Id
            .value
              = f.object.id

                
      .field.editable.required
        .field-content
          .title
            = f.label :name
          .value
            = f.text_field :name, required: true, placeholder: "e.g.: Home"


      .field.editable.cke-collection
        .field-content
          .title
            = f.label :content
          .value
            = f.cktext_area :content

    .association-groups
      .legend
        Section Image

      .section-figures.container.figures-container
        = f.fields_for :figures do|figure|
          = render 'manage/figures/nested_fields', f: figure

      .controls
        = link_to_add_association '+', f, :figures, partial: 'manage/figures/nested_fields', class: "form-button base10-admin-add-association", title: 'Add Figure'

    .association-groups
      .legend
        Section Link

      .section-link.container
        = f.fields_for :links do|link|
          = render 'manage/links/nested_fields', f: link

      .controls
        = link_to_add_association '+', f, :links, partial: 'manage/links/nested_fields', class: "form-button base10-admin-add-association", title: 'Add Link'

    .association-groups
      .legend
        Items

      .section-items.container
        = f.fields_for :items do|item|
          = render 'manage/items/nested_fields', f: item

      .controls
        = link_to_add_association '+', f, :items, partial: 'manage/items/nested_fields', class: "form-button base10-admin-add-association", title: 'Add Item'
