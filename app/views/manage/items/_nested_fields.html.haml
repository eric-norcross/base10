- build_items_relationships(f.object)

.association-group.nested-fields
  .legend
    - if f.object.id.present?
      Item
    - else
      New Item

  .container
    .fieldset
      - if f.object && f.object.id
        .field
          .field-content
            .title
              Id
            .value
              = f.object.id


      .field.editable.required
        .field-content
          .title
            = f.label :name
          .value
            = f.text_field :name, required: true, placeholder: "e.g.: Ruby on Rails"


      = f.fields_for :link do|link_builder|
        = render 'manage/links/embedded_fields', f: link_builder

  .controls
    = link_to_remove_association "â€“", f, class: "form-button base10-admin-remove-association"

