#admin
  %table
    %thead
      %tr
        %th Caption:
        - if defined? @figure.image
          %th Image:
    %tbody
      %tr
        %td= @figure.caption
        - if defined? @figure.image
          - @figure.image.each do |asset|
            %td= image_tag asset.asset_url(:thumb).to_s

  .links
    = link_to 'Edit', edit_figure_path(@figure)
    \|
    = link_to 'Back', figures_path
