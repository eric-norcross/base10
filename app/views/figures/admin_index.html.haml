#admin
  %h1 Available Figure

  .links
    = link_to 'Add a new Figure', new_figure_path, {class: "button"}

  - if @figures
    %table
      %thead
        %tr
          %th Caption:
          %th Image:
          %th
      %tbody
        - @figures.each do |figure|
          %tr
            %td= figure.caption
            %td
              - if !figure.images.blank?
                = cl_image_tag(figure.images.first.asset.filename.to_s, transformation: "hint", alt: figure.images.first.asset.filename.to_s, title: figure.caption)
              - else
                n/a
            %td.controls
              = link_to 'Show', figure
              = link_to 'Edit', edit_figure_path(figure)
              = link_to 'Destroy', figure, method: :delete, data: { confirm: 'Are you sure?' }

  .links
    = link_to 'Add a new Figure', new_figure_path, {class: "button"}
