#admin
  %h1 Available Sku

  - if @skus
    %table
      %thead
        %tr
          %th Identifier:
          %th Finish:
          / %th Images:
          %th
          %th
          %th
      %tbody
      - @skus.each do |sku|
        %tr
          %td= sku.identifier
          %td= sku.finish.title
          / %td= image_tag sku.image.asset_url(:thumb).to_s
          %td= link_to 'Show', sku
          %td= link_to 'Edit', edit_sku_path(sku)
          %td= link_to 'Destroy', sku, method: :delete, data: { confirm: 'Are you sure?' }

  .links
    = link_to 'Add a new Sku', new_sku_path
