#admin
  %table
    %thead
      %tr
        %th Name:
        %th Title:
        %th Finish:
        - if @sku.finish.image.length > 0
          %th Finish Image:
        - if defined? @sku.images
          - @sku.images.each do
            %th Image:
    %tbody
      %tr
        %td= @sku.name
        %td= @sku.title
        %td= @sku.finish.title
        - if @sku.finish.image.length > 0
          %td= image_tag @sku.finish.image[0].asset_url(:thumb).to_s
        - if defined? @sku.images
          - @sku.images.each do |asset|
            %td= image_tag asset.asset_url(:thumb).to_s

  .links
    = link_to 'Edit', edit_sku_path(@sku)
    \|
    = link_to 'Back', skus_path
