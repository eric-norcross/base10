= form_for @sku, :html => { :multipart => true } do |f|
  - if @sku.errors.any?
    #error-explanation
      %h1
        = "#{pluralize(@sku.errors.count, "error")} prohibited this sku from being saved:"
      %ul
        - @sku.errors.full_messages.each do |msg|
          %li
            = msg

  %fieldset{id: "skus"}
    %legend
      Skus

    = render "sku_fields", f: f    

  .actions
    = f.submit 'Save'
