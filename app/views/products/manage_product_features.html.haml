= render "layouts/partials/user_side_nav"

#admin
  %h1 Listing Products Features

  - if @products
    %table
      %thead
        %tr
          %th Id
          %th Featues
          %th Components
          %th Video

      %tbody
        - @products.each do |product|
          %tr
            %td= product.id
            %td= product.features
            %td
              - product.components.each do |component|
                %span.comma= component.title
            %th= product.video
            

            %td.controls
              = link_to 'Edit', edit_product_path(product)
