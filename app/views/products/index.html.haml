#admin
  %h1 Listing Products

  - if @products
    %table
      %thead
        %tr
          %th Id
          %th Name
          %th Skus
          %th Template
          %th
          %th
          %th

      %tbody
      - @products.each do |product|
        %tr
          %td= product.id
          %td= product.name
          %td
            - product.skus.each do |sku|
              = link_to sku.title, sku
          /%td= product.sku
          %td= product.skin.name
          %td= link_to 'Show', product
          %td= link_to 'Edit', edit_product_path(product)
          %td= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }
  
  .links
    = link_to 'New Prodcut', new_product_path
