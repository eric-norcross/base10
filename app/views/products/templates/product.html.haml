= render "/products/templates/breadcrumbs", product: @product, sku: @sku
.page{:id=>"#{@product.skin.name}"}
  %article
    .gallery#product-views
      .gallery-image
        - if !@product.image.empty?
          = image_tag @product.image[0].asset_url(:gallery)
        %br
        .image-controls
          = link_to "#" do 
            = render :partial => '/layouts/svg/enlarge'
            View Larger Image
        .image-controls.text-align-right
          = link_to "Roll Over Image To Zoom", "#"
      .scroller
        .control.previous
          = link_to "#" do
            = render :partial => '/layouts/svg/arrow_left'
        .items-container
          %ul
          - @sku.images.each do |image|
            %li
              .image-container
                %span.helper
                = link_to "#" do
                  = image_tag image.asset_url(:thumb), :"data-medium" => image.asset_url(:gallery), :"data-large" => image.asset_url(:large)

        .control.next
          = link_to "#" do
            = render :partial => '/layouts/svg/arrow_right'
    #product-details
      %header
        %hgroup
          %h1 
            sku #{@sku.title}
          %h2
            #{@product.collection.title} #{@sku.finish.title}
          %h3
            = @product.title
        #icons
          = link_to "#" do 
            = render :partial => '/layouts/svg/share'
          = link_to "#", class: "print" do 
            = render :partial => '/layouts/svg/print'
      #tabs
        %ul#product_tabs.nav.nav-tabs{"data-tabs" => "tabs"}
          %li.active
            %a.gradient{"data-toggle" => "tab", :href => "#features"} Features
          %li
            %a.gradient{"data-toggle" => "tab", :href => "#dimensions"} Dimensions
          %li
            %a.gradient{"data-toggle" => "tab", :href => "#style"} Style
          %li
            %a.gradient{"data-toggle" => "tab", :href => "#videos"} Videos

        .tab-content
          #features.tab-pane.active
            %div
              = @product.features
              / %ul
              /   %li Casters included (not attached)
              /   %li Utility drawer
              /   %li Letterfile drawer
              /   %li Finished on all sides
              /   %li 
              /     = link_to "Superior drawer construction", "#"
              /   %li 
              /     = link_to "#" do 
              /       = image_tag "pages/placeholders/KI_logo.png", alt: "kathy ireland Home"
            .finishes
              %div
                %h1
                  Also available in
                %ul
                  - @product.skus.each do |sku|
                    %li
                      = link_to @product_path(sku) do
                        = image_tag sku.finish.image[0].asset_url(:thumb), alt: sku.finish.title
                  
              %div
                %h1
                  #{@product.collection.title} #{@sku.finish.title} is also available in
                %ul
                  %li
                    = link_to "Entertainment", "#"

          #dimensions.tab-pane
            - @product.dimensions.each do |dimension|
              %h1
                %span 
                  = dimension.title
                  = dimension.width
                  w x
                  = dimension.height
                  h x
                  = dimension.depth
                  d
              - if dimension.image.length > 0
                - dimension.image.each do |asset|
                  = image_tag asset.asset_url(:thumb).to_s, alt: "Dimensions"
              

          #style.tab-pane
            %p.serif
              = @product.style       
          
          #videos.tab-pane
            %h1 Features of #{@product.collection.title} #{@sku.finish.title} 
            / #{@product.collection.category.title}
            %p 
              This can be some text about sharing the video or something

            %iframe{:width => "440", :height => "267", :src => @product.video, :frameborder => "0", :allowfullscreen => ""}
        
