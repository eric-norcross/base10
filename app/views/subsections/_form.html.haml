= form_for @subsection do |f|
  - if @subsection.errors.any?
    #error-explanation
      %h1
        = "#{pluralize(@subsection.errors.count, "error")} prohibited this subsection from being saved:"
      %ul
        - @subsection.errors.full_messages.each do |msg|
          %li
            = msg

  %fieldset
    %legend
      Sub Component

    .field
      = f.label :section_id, "Section"
      = f.collection_select(:section_id, Section.all, :id, :title, :prompt => "Select a Section")
    
    .field
      = f.label :skin_id, "Template"
      = f.select :skin_id, Skin.all.collect{|t| [t.title, t.id]}
    
    .field
      = f.label :title
      = f.text_field :title
    
    .field
      /= f.label :content
      = f.cktext_area :content
    
    .actions
      = f.submit 'Save'
