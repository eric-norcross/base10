= form_for @location do |f|
  - if @location.errors.any?
    #error-explanation
      %h1
        = "#{pluralize(@location.errors.count, "error")} prohibited this location from being saved:"
      %ol
        - @location.errors.full_messages.each do |msg|
          %li
            = msg

  %fieldset
    %legend
      Location
      
    .field
      = f.label :name
      = f.text_field :name

    .field
      = f.label :address
      = f.text_field :address

    .field
      = f.label :city
      = f.text_field :city

    .field
      = f.label :province
      = f.text_field :province

    .field
      = f.label :postal_code
      = f.text_field :postal_code

    .field
      = f.label :country
      = f.text_field :country

    .field
      = f.label :phone
      = f.text_field :phone

    .field
      = f.label :ext
      = f.text_field :ext

    .field
      = f.label :phone_alt
      = f.text_field :phone_alt

    .field
      = f.label :ext_alt
      = f.text_field :ext_alt
  
  .actions
    = f.submit 'Save'
