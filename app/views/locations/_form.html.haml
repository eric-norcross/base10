= form_for @location do |f|
  - if @location.errors.any?
    #error-explanation
      %h1
        = "#{pluralize(@location.errors.count, "error")} prohibited this location from being saved:"
      %ol
        - @location.errors.full_messages.each do |msg|
          %li
            = msg

  %fieldset
    %legend
      Location
      
    .field.required
      = f.label :name
      = f.text_field :name

    .field.required
      = f.label :address
      = f.text_field :address

    .field.required
      = f.label :city
      = f.text_field :city

    .field.required
      = f.label :province
      = f.select :province, options_for_select(provinces), prompt: "Select a Province"

    .field.required
      = f.label :postal_code
      = f.number_field :postal_code

    .field.required
      = f.label :country
      = f.text_field :country

    .field
      = f.label :phone
      = f.number_field :phone

    .field
      = f.label :ext
      = f.number_field :ext

    .field
      = f.label :phone_alt, "Alt phone"
      = f.number_field :phone_alt

    .field
      = f.label :ext_alt, "Alt phone ext"
      = f.number_field :ext_alt

    .field
      = f.label :url, "URL"
      = f.url_field :url
      %span.instructions
        (Prefix "http://" to all external links. Use "/" for all internal. e.g.: "/locations")

  %fieldset
    %legend
      Hidden fields. These will only visible during testing phases. DO NOT EDIT.

    .field
      = f.label :latitude
      = f.number_field :latitude, disabled: true

    .field
      = f.label :longitude
      = f.number_field :longitude, disabled: true

    .field
      = f.label :match_type
      = f.text_field :match_type, disabled: true
  
  .actions
    = f.submit 'Save'
