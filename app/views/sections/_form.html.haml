= form_for @section do |f|
  - if @section.errors.any?
    #error-explanation
      %h1
        = "#{pluralize(@section.errors.count, "error")} prohibited this section from being saved:"
      %ul
        - @section.errors.full_messages.each do |msg|
          %li
            = msg

  %fieldset
    %legend
      Section

    .field
      = f.label :title
      = f.text_field :title
      
    .actions
      = f.submit 'Save'
