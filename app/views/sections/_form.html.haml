= form_for @section do |f|
  - if @section.errors.any?
    #error_explanation
      %h1= "#{pluralize(@section.errors.count, "error")} prohibited this section from being saved:"
      %ul
        - @section.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :category_id, "Category"
    = f.select :category_id, Category.all.collect{|t| [t.name, t.id]}
  .field
    = f.label :skin_id, "Template"
    = f.select :skin_id, Skin.all.collect{|t| [t.name, t.id]}
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :content
    = f.text_area :content
  .actions
    = f.submit 'Save'
