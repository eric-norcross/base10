#admin
  %h1 Available Section

  - if @sections
    %table
      %thead
        %tr
          %th Id
          %th Title
          %th Name
          %th Category
          %th
          %th
      %tbody
      - @sections.each do |section|
        %tr
          %td= section.id
          %td= section.title
          %td= section.name
          %td= section.category.name
          %td= link_to 'Show', section
          %td= link_to 'Edit', edit_section_path(section)
          %td= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' }

  .links
    = link_to 'Add New Section', new_section_path
