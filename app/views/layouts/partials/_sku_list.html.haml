- @sku = product
- @product = Sku.product(@sku.product_id)

- if @product.show
  %li
    .list-view-image
      = link_to @product.path(@sku), { title: @product.title } do
        = cl_image_tag(@product.list_image(@sku), transformation: "list_med", alt: "{@product.title} Image", title: @product.title)
    .list-view-info
      %h1.collection
        = link_to @product.collection.get_patriarch_title, collection_path(@product.collection.get_patriarch.id)
        &ndash;
        = link_to @sku.finish.title, finish_path(@sku.finish.id)
      %h2.title
        = link_to @product.title, @product.path(@sku)
      %h3.finish
        sku#
      %ul
        %li
          = link_to @sku.title, @product.path(@sku)