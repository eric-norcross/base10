= form_for @category do |f|
  - if @category.errors.any?
    #error-explanation
      %h1= "#{pluralize(@category.errors.count, "error")} prohibited this category from being saved:"
      %ul
        - @category.errors.full_messages.each do |msg|
          %li= msg

  / .field
  /   = f.label :name
  /   = f.text_field :name
  .field
    = f.label :title
    = f.text_field :title
  .actions
    = f.submit 'Save'
