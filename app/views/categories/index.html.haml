#admin
  %h1 Available Categories

  - if @categories
    %table
      %thead
        %tr
          %th Id
          %th Name
          %th Title
          %th Kind
          %th
      %tbody
      - @categories.each do |category|
        %tr
          %td= category.id
          %td= category.name
          %td= category.title
          %td= Category::CATEGORY_TYPES[category.kind][0]
          %td= link_to 'Show', category
          %td= link_to 'Edit', edit_category_path(category)
          %td= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }

  .links
    = link_to 'Add New Category', new_category_path
