#admin
  %h1 Listing Compilations

  - if @compilations
    %table
      %thead
        %tr
          %th Title
          %th Collection
          %th Template
          %th Compilation Skus
          / %th
          %th 
          %th

      %tbody
        - @compilations.each do |compilation|
          %tr
            %td= compilation.title
            %td= compilation.collection.title
            %td= compilation.skin.name
            %td
              - compilation.products.each_with_index do |product, index|
                - product.skus.each do |sku|
                  = link_to sku.title, compilation_product_sku_path(compilation, product, sku), { title: product.title }
            / %td= link_to 'Show', compilation
            %td= link_to 'Edit', edit_compilation_path(compilation)
            %td= link_to 'Destroy', compilation, method: :delete, data: { confirm: 'Are you sure?' }
  
  .links
    = link_to 'New Compilation', new_compilation_path
