= form_for @finish, :html => { :multipart => true } do |f|
  - if @finish.errors.any?
    #error_explanation
      %h1
        = "#{pluralize(@finish.errors.count, "error")} prohibited this finish from being saved:"
      %ul
        - @finish.errors.full_messages.each do |msg|
          %li
            = msg

  %fieldset{id: "finishes"}
    %legend
      Finish

    = render "finish_fields", f: f  

  .actions
    = f.submit 'Save'

