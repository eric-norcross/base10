= form_for @skin do |f|
  - if @skin.errors.any?
    #error-explanation
      %h1
        = "#{pluralize(@skin.errors.count, "error")} prohibited this skin from being saved:"
      %ol
        - @skin.errors.full_messages.each do |msg|
          %li
            = msg

  %fieldset{id: "skin-fields"}
    %legend
      Skin

    .field.required
      = f.label :title
      = f.text_field :title

    .field.required
      = f.label :template
      = f.text_field :template
  
    .actions
      = f.submit 'Save Skin'