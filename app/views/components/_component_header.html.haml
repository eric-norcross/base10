- if (element.parent_id.blank? || element.parent_id == 0 || element.patriarch.category_id != category.id) && element.active
  %li
    = link_to element.title, element.path
    - if !element.children.blank?
      %ul
        - element.children.each do |child|
          = render "components/component_header", element: child, category: category
