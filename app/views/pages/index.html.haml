#admin
  %h1 Listing pages

  - if @pages
    %table
      %thead
        %tr
          %th Id
          %th Name
          %th Header
          %th Template
          %th
          %th
          %th
          
      %tbody
      - @pages.each do |page|
        %tr
          %td= page.id
          %td= page.name
          %td= page.header
          %td= page.skin.template
          %td= link_to 'Show', page
          %td= link_to 'Edit', edit_page_path(page)
          %td= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' }

  .links
    = link_to 'New Page', new_page_path
